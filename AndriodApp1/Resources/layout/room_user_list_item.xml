<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical"
    android:id="@+id/linearLayoutRoomUserListItem">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:textColor="?attr/normalTextColor"
        android:id="@+id/username"
        android:text="flag and usernameDummy"
        android:textSize="22sp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="?attr/normalTextColor"
            android:id="@+id/operatorStatus"
            android:text="flag and usernameDummy"
            android:textSize="22sp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:id="@+id/numFiles"
            android:text="filesDummy"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:id="@+id/speed"
            android:text="speedDummy"
            android:textSize="16sp"
            />
       <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/noted_image"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/note_text_outline"
            android:tint="@color/subTextColor"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/friend_ignored_image"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/account_star"
            android:tint="@color/subTextColor"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="90"
            android:id="@+id/usersInRoom"
            android:textSize="22sp"
            />-->
</LinearLayout>