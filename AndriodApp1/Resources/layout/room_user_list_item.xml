<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:id="@+id/linearLayoutRoomUserListItem">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_marginTop="3sp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="6sp"

                android:layout_width="16sp"
                android:layout_height="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/checkbox_blank_circle"
                android:id="@+id/userStatus"
                android:tint="?attr/mainTextColor"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textColor="?attr/normalTextColor"
                android:id="@+id/username"
                android:text="flag user"
                android:textSize="22sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="?attr/normalTextColor"
                android:id="@+id/operatorStatus"
                android:text="mod"
                android:textSize="22sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="24sp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/flag"
                android:text="xx"
                android:textSize="16sp"
            android:textColor="?attr/mainTextColor"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:id="@+id/numFiles"
                android:text="filesDummy"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/speed"
                android:text="speedDummy"
                android:textSize="16sp"
                />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/noted_image"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/note_text_outline"
                android:tint="@color/subTextColor"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/friend_ignored_image"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/account_star"
                android:tint="@color/subTextColor"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
