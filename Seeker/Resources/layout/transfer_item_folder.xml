    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:ellipsize="end"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="None"
            android:textColor="?attr/cellTextColor"
            android:textSize="12sp"
            android:singleLine="true"
        />

        <TextView
            android:id="@+id/textViewStatusAdditionalInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:ellipsize="end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="2"
            android:textSize="12sp"
            android:textColor="?attr/cellTextColor"
            android:singleLine="true"
        />
        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="2dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
        />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:background="?attr/header_cell_shape_bottom"
    >
        <TextView
            android:id="@+id/filesRemaining"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:ellipsize="end"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="3 files remaining"
            android:textColor="?attr/cellTextColor"
            android:textSize="12sp"
            android:singleLine="true"
        />

        <TextView
            android:id="@+id/currentFile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:ellipsize="end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Current: filename..."
            android:textSize="12sp"
            android:textColor="?attr/cellTextColor"
            android:singleLine="true"
        />
    </LinearLayout>
</LinearLayout>
