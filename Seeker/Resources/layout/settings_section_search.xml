<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.divider.MaterialDivider
        style="@style/SettingsDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/SettingsSectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/section_search" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/searchResLayout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_search_results"
            android:layout_marginStart="10dp"
            android:layout_weight="0.4"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="?attr/normalTextColorNonTinted"
            android:id="@+id/searchResults" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/searchNumberSpinner" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/smartFilterLayout"
        android:orientation="horizontal">

        <CheckBox
            style="@style/SettingsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ShowSmartFilters"
            android:layout_gravity="center_vertical"
            android:id="@+id/smartFilterEnable" />

        <Button
            style="@style/SettingsSmallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Configure"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/configureSmartFilters" />
    </LinearLayout>

    <CheckBox
        style="@style/SettingsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/only_show_free_slots"
        android:layout_gravity="center_vertical"
        android:id="@+id/freeUploadSlots" />

    <CheckBox
        style="@style/SettingsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ShowPrivateLockedSearch"
        android:layout_gravity="center_vertical"
        android:id="@+id/showLockedInSearch" />

    <CheckBox
        style="@style/SettingsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ShowPrivateLockedBrowse"
        android:layout_gravity="center_vertical"
        android:id="@+id/showLockedInBrowseResponse" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/searchHistoryLayout"
        android:orientation="horizontal">

        <CheckBox
            style="@style/SettingsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_search_history"
            android:layout_gravity="center_vertical"
            android:id="@+id/searchHistoryRemember" />

        <Button
            style="@style/SettingsSmallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_search_history"
            android:layout_gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/clearHistory" />
    </LinearLayout>

</merge>
