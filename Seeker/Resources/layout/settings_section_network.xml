<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.divider.MaterialDivider
        style="@style/SettingsDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/SettingsSectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/section_network" />

    <!-- Listening / Port / UPnP -->
    <com.google.android.material.card.MaterialCardView
        style="@style/SettingsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listeningLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/listeningRow1"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    style="@style/SettingsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_listening"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/enableListening" />

                <ImageView
                    style="@style/SettingsHelpIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/listeningHelp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="26dp"
                android:id="@+id/listeningRow2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Port: 10000DUMMY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="?attr/normalTextColorNonTinted"
                    android:paddingStart="4dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/portView" />

                <Button
                    style="@style/SettingsSmallButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_port"
                    android:id="@+id/changePort"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp" />

                <Button
                    style="@style/SettingsSmallButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_your_port_status"
                    android:id="@+id/checkStatus"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="26dp"
                android:id="@+id/listeningRow3"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    style="@style/SettingsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/use_pnp_for_port_forwarding"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/useUPnPCheckBox" />

                <ImageView
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:id="@+id/UPnPStatus"
                    android:tint="?attr/mainTextColor" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Download Speed Limit -->
    <com.google.android.material.card.MaterialCardView
        style="@style/SettingsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/limitDownloadSpeedLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/dlSpeedRow1"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    style="@style/SettingsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LimitDownloadSpeed"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/enable_dl_speed_limits" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/dlSpeedSubLayout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed: 10000DUMMY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="?attr/normalTextColorNonTinted"
                    android:paddingStart="4dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/downloadSpeed" />

                <Button
                    style="@style/SettingsSmallButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Change"
                    android:id="@+id/changeDlSpeed"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:id="@+id/dlPerTransfer" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Upload Speed Limit -->
    <com.google.android.material.card.MaterialCardView
        style="@style/SettingsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/limitUploadSpeedLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/ulSpeedRow1"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    style="@style/SettingsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LimitUploadSpeed"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/enable_ul_speed_limits" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/ulSpeedSubLayout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed: 10000DUMMY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="?attr/normalTextColorNonTinted"
                    android:paddingStart="4dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/uploadSpeed" />

                <Button
                    style="@style/SettingsSmallButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Change"
                    android:id="@+id/changeUlSpeed"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:id="@+id/ulPerTransfer" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Concurrent Downloads Limit -->
    <com.google.android.material.card.MaterialCardView
        style="@style/SettingsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/limitConcurrentDownloadsLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/limitConcurrentDownloadsSublayout"
                android:orientation="horizontal"
                android:gravity="center_horizontal|fill_horizontal|center">

                <com.google.android.material.checkbox.MaterialCheckBox
                    style="@style/SettingsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LimitConcurrentDownloads"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/limitConcurrentDownloadsCheckBox" />

                <ImageView
                    style="@style/SettingsHelpIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/moreInfoConcurrent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="18dp"
                android:id="@+id/limitConcurrentDownloadsSublayout2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max # of Concurrent Downloads: 1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="?attr/normalTextColorNonTinted"
                    android:paddingStart="4dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:id="@+id/concurrentDownloadsLabel" />

                <Button
                    style="@style/SettingsSmallButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Change"
                    android:id="@+id/changeConcurrentDownloads"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</merge>
