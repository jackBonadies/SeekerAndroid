<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/mainPurpleStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="OutlinedRoundedBox" parent="">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <style
        name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded"
        parent=""
    >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="mainPurple">#4f58c4</item>
        <item name="swipeToRefreshProgress">#4f58c4</item>
        <item name="swipeToRefreshBackground">#ffffffff</item>
        <item name="mainPurpleStatusBar">@color/colorPrimaryDark</item>
        <!--<item name="buttonStyle">@drawable/buttonStyle_4f58c4</item>-->
        <item name="rounded_bottom_left_purple">
            @drawable/rounded_bottom_left_purple_4f58c4
        </item>
        <item name="rounded_button">@drawable/rounded_button_4f58c4</item>
        <item name="rounded_bottom_right_purple">
            @drawable/rounded_bottom_right_purple_4f58c4
        </item>
        <item name="rounded_top_purple">
            @drawable/rounded_top_purple_4f58c4
        </item>

        <item name="whitePurpleForNavBar">#858ddd</item>

        <item name="mainPurpleForNavBar">?attr/mainPurple</item>

        <item name="checkBoxColor">@color/colorAccent</item>

        <item name="slskAccent">#437eab</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">?attr/mainPurple</item>
        <item name="actionModeBackground">?attr/mainPurple</item>
    </style>

    <style
        name="MaterialThemeForChip"
        parent="Theme.MaterialComponents.Light.DarkActionBar"
    >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="checkBoxStyle" parent="AppTheme.NoActionBar">
        <item name="colorAccent">?attr/checkBoxColor</item>
        <!--<item name="android:textColorSecondary">UNCHECKEDCOLOR</item>-->
    </style>

    <style
        name="CustomSpinnerTheme"
        parent="@android:style/Widget.TextView.SpinnerItem"
    >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/normalTextColor</item>
    </style>

    <style name="SeekerButtonStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?attr/rounded_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="BottomNavActiveIndicator" parent="">
        <item name="android:color">?attr/whitePurpleForNavBar</item>
        <item name="android:width">56dp</item>
        <item name="android:height">32dp</item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.BottomNavIndicator
        </item>
    </style>

    <style name="ShapeAppearance.BottomNavIndicator" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="navTextInactive">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="navTextActive">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"
    />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!--<style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
    <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
  </style>

  <style name="ThemeOverlay.App.BottomNavigationView" parent="">
    <item name="colorPrimary">@android:color/holo_blue_bright</item>
    <item name="colorOnPrimary">@android:color/holo_blue_bright</item>
  </style>-->

    <!-- Settings screen styles -->
    <style name="SettingsSectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/mainPurple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SettingsCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/slightContrastColor</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="SettingsCheckBox" parent="">
        <item name="android:theme">@style/checkBoxStyle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="SettingsSmallButton" parent="SeekerButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:foreground">@drawable/button</item>
    </style>

    <style name="SettingsHelpIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="srcCompat">@drawable/help_circle_outline</item>
        <item name="android:tint">?attr/mainTextColor</item>
    </style>
</resources>
